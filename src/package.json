{
  "name": "nodejs-hello-world",
  "version": "1.0.0",
  "description": "Production-ready Node.js Hello World application with hive mind architecture",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "build": "docker build -t nodejs-hello-world .",
    "docker:run": "docker run -p 3000:3000 nodejs-hello-world",
    "health": "curl http://localhost:3000/health"
  },
  "keywords": [
    "nodejs",
    "express",
    "hello-world",
    "production-ready"
  ],
  "author": "Hive Mind Collective",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/typography": "^0.5.18",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
