{
  "name": "claude-flow-ui-tests",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for Claude Flow UI",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:security": "jest --testPathPattern=security",
    "test:coverage": "jest --config jest.config.coverage.js",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=50%",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:load": "node load/load-test.js",
    "test:load:artillery": "artillery run load/artillery-config.yml",
    "test:performance": "node performance/benchmarks.js",
    "test:all": "./ci/test-runner.sh",
    "coverage:open": "open coverage/lcov-report/index.html",
    "coverage:serve": "npx http-server coverage/lcov-report -p 8080",
    "lint:tests": "eslint . --ext .js,.ts,.tsx",
    "clean": "rm -rf coverage test-results test-reports node_modules/.cache",
    "setup": "npm install && npx playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.16",
    "artillery": "^2.0.0",
    "benchmark": "^2.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "socket.io-client": "^4.7.0",
    "supertest": "^6.3.0",
    "ws": "^8.14.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js",
      "**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "../src/**/*.{js,ts,tsx}",
      "../unified-server.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "./setup-enhanced.ts"
    ],
    "testTimeout": 30000
  },
  "engines": {
    "node": ">=18.0.0"
  }
}